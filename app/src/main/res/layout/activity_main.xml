<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/activity_background">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

     <ImageView
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:src="@drawable/barbell"
         android:layout_gravity="center"
         android:layout_marginTop="20dp"/>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="36sp"
         android:text="IMC"
         android:textStyle="bold"
         android:gravity="center"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textStyle="bold"
         android:textSize="18dp"
         android:text="Qual seu peso?"/>
     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/activity_background2"
         android:padding="16dp"
         android:drawableEnd="@drawable/altura"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="18dp"
         android:textStyle="bold"
         android:text="Qual sua altura?"/>
     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/activity_background2"
         android:padding="16dp"
         android:drawableEnd="@drawable/pesinho"
         />
     <Button
         android:layout_marginTop="32dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Calcular"
         android:textStyle="bold"
         android:background="@drawable/activity_background2"/>
     <TextView
         android:layout_marginTop="20dp"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:textSize="42dp"
         android:text="22.8"
         android:textColor="#ff000000"
         android:gravity="center"
         android:layout_gravity="center"
         android:background="@drawable/activity_background3"/>
     <TextView
         android:layout_marginTop="5dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="24sp"
         android:text="Peso ideal!"
         android:gravity="center"/>


    </LinearLayout>


   </ScrollView>


</LinearLayout>